{
    "compilerOptions": {
        "outDir": "dist",
        "target": "es2017",
        "lib": ["es6", "dom"],
        "types": ["node", "jasmine", "reflect-metadata", "mongodb", "uuid", "express"],
        "module": "commonjs",
    "allowJs": false,
    "checkJs": false,
    "sourceMap": true,
    "strict": true,
    "noImplicitAny": false,
    "strictNullChecks": false,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },
    "exclude": [
        "node_modules",
        "dist",
        "typings/browser.d.ts",
        "typings/browser/**"
    ]
}
